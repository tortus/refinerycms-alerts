<% content_for :body_content_title do %>
  <%= @alert.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @alert.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @alert.content %>
    </p>
  </section>
  <section>
    <h1>Live At</h1>
    <p>
      <%=raw @alert.live_at %>
    </p>
  </section>
  <section>
    <h1>Down At</h1>
    <p>
      <%=raw @alert.down_at %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="alerts">
      <% @alerts.each do |alert| %>
        <li>
          <%= link_to alert.title, refinery.alerts_alert_path(alert) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
